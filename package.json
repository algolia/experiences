{
  "name": "experiences",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint",
    "format": "prettier --write \"**/*.{ts,tsx,md,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,html}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint",
      "prettier --write"
    ],
    "*.{md,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.43.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ]
}
